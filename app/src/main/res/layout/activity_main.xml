                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
