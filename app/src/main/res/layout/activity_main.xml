<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:id="@+id/biglinear1">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">
            <ImageButton
                android:layout_column="0"
                android:layout_row="0"
                android:src="@drawable/left_icon"
                android:background="#ffffff"
                android:layout_width="30dp"
                android:layout_height="182dp"
                android:scaleType="fitCenter"
                android:layout_margin="2.5dp"/>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="182dp"
                android:orientation="vertical"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@drawable/border_layout"
                android:layout_margin="2.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="월별"
                            android:textColor="#ff0000"
                            android:background="#ffffff"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2021.06"
                            android:textColor="#000000"
                            android:background="#ffffff"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="이달"
                            android:textColor="#000000"
                            android:background="#ffffff" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="264dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#BABABC"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    이달의 지출"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 원    "
                        android:layout_gravity="center_vertical"
                        android:textColor="#ff0000"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    이달의 수입"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 원    "
                        android:layout_gravity="center_vertical"
                        android:textColor="#0000ff"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    이달의 저축"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 원    "
                        android:layout_gravity="center_vertical"
                        android:textColor="#00ff00"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    이달의 잔액"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 원    "
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_column="2"
                android:layout_row="0"
                android:layout_width="30dp"
                android:layout_height="182dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_margin="2.5dp">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="59dp"
                    android:src="@drawable/information"
                    android:scaleType="fitStart"
                    android:background="#ffffff"
                    android:id="@+id/informationbutton"
                    />
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:src="@drawable/right_icon"
                    android:scaleType="fitCenter"
                    android:background="#ffffff"
                    />
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:background="#ffffff"></LinearLayout>
            </LinearLayout>

            <ImageButton
                android:layout_column="0"
                android:layout_row="1"
                android:src="@drawable/left_icon"
                android:background="#ffffff"
                android:layout_width="30dp"
                android:layout_height="182dp"
                android:scaleType="fitCenter"
                android:layout_margin="2.5dp"/>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="182dp"
                android:orientation="vertical"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@drawable/border_layout"
                android:layout_margin="2.5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="일별"
                            android:textColor="#ff0000"
                            android:background="#ffffff"
                            />
                        <Button
                            android:id="@+id/btnDate2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2021.06.16"
                            android:textColor="#000000"
                            android:background="#ffffff"
                            android:onClick="OnClickHandler"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="오늘"
                            android:textColor="#000000"
                            android:background="#ffffff" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="264dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#BABABC"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    오늘의 지출"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 원    "
                        android:layout_gravity="center_vertical"
                        android:textColor="#ff0000"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    오늘의 수입"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 원    "
                        android:layout_gravity="center_vertical"
                        android:textColor="#0000ff"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    오늘의 저축"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 원    "
                        android:layout_gravity="center_vertical"
                        android:textColor="#00ff00"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    오늘의 잔액"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 원    "
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:layout_weight="3"
                        android:textAlignment="textEnd"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

            </LinearLayout>
            <ImageButton
                android:layout_column="2"
                android:layout_row="1"
                android:src="@drawable/right_icon"
                android:background="#ffffff"
                android:layout_width="30dp"
                android:layout_height="182dp"
                android:scaleType="fitCenter"
                android:layout_margin="2.5dp"/>


        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/biglinear2"
        android:layout_below="@+id/biglinear1"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:background="@drawable/border_sky"
        android:padding="4dp">
        <GridLayout
            android:layout_width="332dp"
            android:layout_height="160dp"
            android:columnCount="4"
            android:rowCount="3">
            <TextView
                android:layout_width="83dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text=" 총 자산"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:background="#A2CCFF"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="1"
                android:text="0 원"
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="83dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="2"
                android:text=" 총 저축"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:background="#A2CCFF"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="83dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="3"
                android:text="0 원  "
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#A2CCFF"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="4"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text=" 카테고리"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:background="#A2CCFF"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="1"
                android:text="없음  "
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="2"
                android:text=" 목표 지출"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:background="#A2CCFF"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="80dp"
                android:layout_row="2"
                android:layout_column="3"
                android:text=" 없음 "
                android:textColor="#000000"
                android:background="#ffffff"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"/>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/biglinear2"
        android:orientation="horizontal"
        android:paddingTop="5dp">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A2CCFF"
            android:src="@drawable/calendar"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/calcbutton"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A2CCFF"
            android:src="@drawable/list"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/listbutton"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A2CCFF"
            android:src="@drawable/memo"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/memobutton"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A2CCFF"
            android:src="@drawable/success"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/successbutton"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A2CCFF"
            android:src="@drawable/calculator"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/calculatorbutton"
            />
    </LinearLayout>


</RelativeLayout>