<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Success"
    android:background="#A2CCFF"
    android:padding="20dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/success_title"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="#A2CCFF"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:hint="0"
            android:textSize="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bold2_layout"
            android:id="@+id/suc_btn1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="40dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:background="@drawable/bold2_layout"
        android:layout_gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
           <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="26dp"
              android:text="이번 달 목표 지출의"
              android:textColor="#000000"
              android:layout_centerInParent="true"
              />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:text="0"
                    android:textSize="36dp"
                    android:id="@+id/suc_tv1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:text="%"
                    android:textSize="36dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="를 지출하셨습니다"
                    android:textSize="22dp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="308dp"
        android:layout_height="242dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="308dp"
            android:layout_height="242dp"
            android:layout_gravity="center"
            android:background="@drawable/green"
            android:visibility="visible"
            android:id="@+id/img_green"
          />
        <ImageView
            android:layout_width="308dp"
            android:layout_height="242dp"
            android:layout_gravity="center"
            android:background="@drawable/yellow"
            android:visibility="invisible"
            android:id="@+id/img_yellow"
            />
        <ImageView
            android:layout_width="308dp"
            android:layout_height="242dp"
            android:layout_gravity="center"
            android:background="@drawable/orange"
            android:visibility="invisible"
            android:id="@+id/img_orange"
            />
        <ImageView
            android:layout_width="308dp"
            android:layout_height="242dp"
            android:layout_gravity="center"
            android:background="@drawable/red"
            android:visibility="invisible"
            android:id="@+id/img_red"
            />

    </FrameLayout>

</LinearLayout>